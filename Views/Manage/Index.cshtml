@model IEnumerable<IdentityMvc.Models.ApplicationRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="row mb-2">
    <div class="col-lg">
        <a asp-action="Add" class="btn btn-primary float-right">Add</a>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
    </thead>
    <tbody>
        @foreach (var role in Model){
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> | 
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>